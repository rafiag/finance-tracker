# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Google Sheets Configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com

# Path to Google Service Account credentials JSON file
# For local development: ./credentials.json
# For Railway: Use GOOGLE_SHEETS_CREDENTIALS_JSON instead (see below)
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials.json

# For Railway deployment: Paste the entire contents of credentials.json here
# This will be used if GOOGLE_SHEETS_CREDENTIALS_PATH doesn't exist
# GOOGLE_SHEETS_CREDENTIALS_JSON={"type":"service_account","project_id":"...",...}

# Your Telegram Chat ID (for receiving confirmations and alerts)
MY_TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Railway Deployment (Optional - only needed for production)
# Leave empty for local development
PORT=8000
